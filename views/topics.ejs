<script>

var button = document.querySelector(".topics-btn");
var topicBar = document.querySelector(".topics");
var closeBtn = document.querySelector(".close-btn");

button.addEventListener("click", function() {
     topicBar.style.display = "block";
});

closeBtn.addEventListener("click", function() {
  topicBar.style.display = "none";
});

</script>
<script>
  var a = 1 ;
  function show_hide() {
    if (a==1) {
      document.querySelector(".dashboard").style.display = "block";
      return a = 0;
    }else {
      document.querySelector(".dashboard").style.display = "none";
      return a = 1;
    }
  }

  function show_more() {
    if (a==1) {
      document.querySelector(".description").style.height = "auto";
      document.querySelector(".more").innerHTML = "SHOW LESS";
      return a = 0;
    }else {
      document.querySelector(".description").style.height = "50px";
      document.querySelector(".more").innerHTML = "SHOW MORE";
      return a = 1;
    }
  }
</script>
